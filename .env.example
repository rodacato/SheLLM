# SheLLM Configuration
PORT=6000
TIMEOUT_MS=120000
MAX_CONCURRENT=2
MAX_QUEUE_DEPTH=10
HEALTH_CACHE_TTL_MS=30000

# Client authentication (JSON)
# Each client needs a unique key and requests-per-minute limit
# When not set, auth is disabled — ALL requests are allowed without a token
# SHELLM_CLIENTS='{"stockerly":{"key":"stockerly-shellm-2026","rpm":10},"dev":{"key":"dev-shellm-local","rpm":5}}'

# Global rate limit (all clients combined, requests per minute)
# SHELLM_GLOBAL_RPM=30

# Cerebras API (optional — only needed if using cerebras provider)
# CEREBRAS_API_KEY=csk-xxx
